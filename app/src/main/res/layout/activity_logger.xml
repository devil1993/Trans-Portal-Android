<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.devil1993.transportal.LoggerActivity">


    <TextView
        android:id="@+id/tvGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvWifi"
        android:layout_alignRight="@+id/tvWifi"
        android:layout_alignTop="@+id/textView3"
        android:width="123dp"
        android:height="15dp"
        android:fontFamily="monospace"
        android:text="GPS Here"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="10sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/tvWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:width="300dp"
        android:height="80dp"
        android:text="Wifis around"
        android:textColor="@color/wallet_hint_foreground_holo_dark"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:max="100"
        android:maxWidth="200dp"
        android:minWidth="150dp"
        android:progress="50" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/seekBar"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:text="Normal Road"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvWifi"
        android:layout_alignRight="@+id/tvWifi"
        android:layout_alignTop="@+id/seekBar"
        android:text="Busy Road"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWifi"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvWifi"
        android:layout_marginTop="42dp"
        android:text="Your Location: "
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWifi"
        android:layout_alignStart="@+id/tvWifi"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:text="WiFIs around you"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWifi"
        android:layout_alignStart="@+id/tvWifi"
        android:layout_below="@+id/tvWifi"
        android:layout_marginTop="27dp"
        android:text="Speed:"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/tvGPS"
        android:layout_alignStart="@+id/tvGPS"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:text="Speed" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="41dp"
        android:text="Available Open WiFi around you:"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/tvFreeWiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvWifi"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/tvWifi"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="17dp"
        android:height="35dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvWiFiCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/tvSpeed"
        android:layout_alignStart="@+id/tvSpeed"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold|italic" />

</RelativeLayout>
